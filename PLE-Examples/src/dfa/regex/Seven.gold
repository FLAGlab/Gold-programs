using gold.structures.automaton.*
using gold.visualization.automaton.*

procedure main(args:String[]) begin
	Q := (0‥4)
	Σ := {'0','1'}
	qI := 0
	F := {3,2}
	A := GDeterministicAutomaton(Q,Σ,qI,F,δ)
	GAutomataFrame.show(A)
end

function δ(q, σ) begin
	if q == 0 and σ == '1' then
		return 1
	elseif q == 0 and σ == '0' then 
		return 2
	elseif q ∈ {1,3} then
		return (q+2)%4
	elseif q == 2 then
		return 4
	else 
		return 2
	end
end
	


